# Example Terraform variables file for CI/CD pipeline
# Copy this file to terraform.tfvars and fill in your values

project_name = "apprentice-final"
environment  = "staging"

# GitHub Configuration
github_owner  = "bardh-serreqi-pm"
github_repo   = "polymath-task-final"
github_branch = "main"

# AWS Configuration
aws_region = "us-east-1"

# Artifact Locations (populate from IAC module outputs)
api_ecr_repository_url     = "123456789012.dkr.ecr.us-east-1.amazonaws.com/apprentice-final-staging-api"
frontend_bucket_name       = "apprentice-final-staging-frontend"
cloudfront_distribution_id = "EXAMPLE123456"
api_gateway_url            = "https://abc123.execute-api.us-east-1.amazonaws.com/staging"
alerts_sns_topic_arn       = "arn:aws:sns:us-east-1:123456789012:apprentice-final-staging-alerts"
lambda_image_default_uri   = "123456789012.dkr.ecr.us-east-1.amazonaws.com/apprentice-final-staging-api:latest"

# Terraform State Configuration
terraform_state_bucket     = "your-terraform-state-bucket-name"
terraform_state_lock_table = "your-terraform-state-lock-table-name"

# Route53 Custom Domain Configuration (optional)
# The Route53 hosted zone will be looked up automatically by domain name
frontend_domain_name = ""  # Example: "app.example.com"

# Tags
tags = {
  Project   = "ApprenticeFinal"
  ManagedBy = "Terraform"
  Owner     = "your-name"
}

